<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_centerInParent="true"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/sel_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/sel_name"
        android:layout_alignBottom="@id/sel_name"
        android:layout_toRightOf="@id/sel_name"
        android:layout_toEndOf="@id/sel_name"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:singleLine="true"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/sel_checkbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>

</RelativeLayout>