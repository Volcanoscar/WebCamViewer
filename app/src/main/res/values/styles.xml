<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:textColorLink">@color/hyperlink</item>
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_bg</item>
        <item name="selectableItemBackground">@drawable/ripple</item>
        <item name="android:selectableItemBackground">@drawable/ripple</item>
    </style>

    <style name="AppCompatFullScreen" parent="AppTheme.Base">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SeekBar" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/green_scrubber_progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/green_scrubber_progress_horizontal</item>
        <item name="android:thumb">@drawable/green_scrubber_control_selector</item>
    </style>

    <style name="MainCardViewGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/main_margin</item>
        <item name="android:layout_marginLeft">@dimen/main_middle_margin</item>
        <item name="android:layout_marginStart">@dimen/main_middle_margin</item>
        <item name="android:layout_marginRight">@dimen/main_middle_margin</item>
        <item name="android:layout_marginEnd">@dimen/main_middle_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainCardViewList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_top_bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="EditImageButton">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_action_navigation_more_vert</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="CardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">bottom|left</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item>
    </style>

</resources>
